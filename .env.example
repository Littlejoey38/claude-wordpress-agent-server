# ========================================
# WordPress Configuration
# ========================================
# URL complète de votre installation WordPress
WORDPRESS_URL=http://nectar-template.wp.local/

# Nom d'utilisateur WordPress (avec permissions edit_posts minimum)
WORDPRESS_USER=admin

# Application Password généré depuis WordPress
# (Utilisateurs > Profil > Mots de passe d'application)
WORDPRESS_APP_PASSWORD=eMEq WCzu SqGP 5SvF 1Lb3 Atfr

# ========================================
# Anthropic API
# ========================================
# Clé API Anthropic pour Claude
# Obtenir sur: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# ========================================
# Redis Cache (Optionnel)
# ========================================
# URL de connexion Redis
REDIS_URL=redis://localhost:6379

# Activer/désactiver le cache Redis
REDIS_ENABLED=true

# ========================================
# Server Configuration
# ========================================
# Port du serveur Express
PORT=3000

# Environnement: development | production | test
NODE_ENV=development

# ========================================
# Logging
# ========================================
# Niveau de log: error | warn | info | http | verbose | debug | silly
LOG_LEVEL=info

# ========================================
# Cache Configuration
# ========================================
# Durée de vie du cache en secondes (par défaut: 1 heure)
CACHE_TTL=3600

# Activer le cache des schémas de blocs
SCHEMA_CACHE_ENABLED=true

# ========================================
# Playwright Configuration
# ========================================
# Mode headless du navigateur (true en production, false en dev)
HEADLESS=false

# Timeout pour les opérations Playwright en millisecondes
BROWSER_TIMEOUT=30000
